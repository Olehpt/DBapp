@{
}
<h1>Querries</h1>

<form method="get">
    <input name="targetprice" type="number" step="1" />
    <button type="submit">Search</button>
</form>

@if (ViewBag.Products != null)
{
    <div class="mt-3">

        <h3 class="mb-3">Results:</h3>

        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Unit Price</th>
                    <th>Seller</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var p in ViewBag.Products)
                {
                    <tr>
                        <td>@p.Title</td>
                        <td>@p.UnitPrice.ToString("0.00")</td>
                        <td>@p.SellerId</td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
}